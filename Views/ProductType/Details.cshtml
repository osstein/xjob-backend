@model backend.Models.ProductType

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detaljer</title>
</head>

<body>

    <div>
        <h4>Produkttyp</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-10">
                <b>@Html.DisplayFor(model => model.Product.Name)</b> -
                @Html.DisplayFor(model => model.Product.ProductNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductColor)
            </dt>
            <dd class="col-sm-10">
                <div
                    style="background-color:  @Html.DisplayFor(model => model.ProductColor.ColorCode); display:inline-block; height:15px; width:15px;">
                </div>
                @Html.DisplayFor(model => model.ProductColor.Color)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductSize)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductSize.Size)
            </dd>
        </dl>
    </div>
