@model IEnumerable<backend.Models.ProductColor>

@{
   Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Färger</title>
</head>
<body>
<p>
    <a asp-action="Create">Skapa Ny</a>
</p>
<p><b>Antal objekt: </b>@ViewBag.count</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColorCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td><div style="background-color: @item.ColorCode; display:inline-block; height:15px; width:15px;"></div>
                @Html.DisplayFor(modelItem => item.Color)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
